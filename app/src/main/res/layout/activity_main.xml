    <TextView
        android:id="@+id/q1"
        android:layout_below="@+id/email"
        android:layout_marginTop="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/q1"
        />
    <Spinner
        android:id="@+id/have1"
        android:layout_marginLeft="70sp"
        android:layout_below="@+id/q1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_below="@+id/have1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/q2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Which company"
            />
        <Spinner
            android:id="@+id/hav2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/q2"
            android:layout_marginLeft="5sp"
            />

        <TextView
            android:id="@+id/q3"
            android:layout_below="@id/q2"
            android:layout_marginTop="9sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reason for leaving"
            />
        <Spinner
            android:id="@+id/hav3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/q2"
            android:layout_marginTop="9sp"
            android:layout_toRightOf="@id/q3"
            android:layout_marginLeft="5sp"
            />
        <EditText
            android:id="@+id/other"
            android:layout_marginTop="10dp"
            android:layout_below="@id/q3"
            android:layout_width="400dp"
            android:hint="@string/wc"
            android:layout_height="wrap_content" />
    </RelativeLayout>


